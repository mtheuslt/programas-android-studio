<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowTitleStyle">@style/AppTheme.AlertDialog.Title</item>
        <item name="android:buttonBarStyle">@style/AppTheme.AlertDialog.ButtonBar</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorText</item>

        <item name="android:windowActionBar">true</item>
    </style>

    <style name="AppTheme.AlertDialog.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.AlertDialog.ButtonBar">
        <item name="android:divider">@color/colorText</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:background">@color/colorIcon</item>
    </style>

</resources>
