<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activities.MainActivity">

    <!-- Nome dos jogadores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/player_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/player_one"
            android:textAllCaps="true"
            android:textColor="@color/colorPlayerOne"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/versus_marker"
            android:textAllCaps="true"
            android:textColor="@color/colorText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/player_two"
            android:textAllCaps="true"
            android:textColor="@color/colorPlayerTwo"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Tabuleiro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="4dp">

            <Button
                android:id="@+id/cell_00_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cell_01_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cell_02_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="4dp">

            <Button
                android:id="@+id/cell_10_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cell_11_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cell_12_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="4dp">

            <Button
                android:id="@+id/cell_20_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cell_21_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cell_22_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/cell_background"
                android:fontFamily="casual"
                android:textSize="72sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:text="@string/try_again"
        android:textColor="@color/colorText"
        android:textSize="18sp" />

</LinearLayout>